<!-- HERO -->
<section class="hero">
  <div class="hero-bg"></div>
  <div class="hero-side-text">{{ section.settings.side_text }}</div>

  <div class="hero-content">
    <div class="hero-collection-label">{{ section.settings.subheading }}</div>
    <h1 class="hero-title">
      <span>{{ section.settings.heading_italic }}</span>
      {{ section.settings.heading }}
    </h1>
    <div class="hero-verse">{{ section.settings.verse }}</div>
    <div class="hero-cta-row">
      <a href="{{ section.settings.button_link | default: routes.all_products_collection_url }}" class="btn-primary">{{ section.settings.button_label }}</a>
      <a href="{{ section.settings.secondary_button_link | default: '#' }}" class="btn-secondary">{{ section.settings.secondary_button_label }}</a>
    </div>
  </div>

  <div class="hero-image-area">
    {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | img_url: '1024x1024' }}" alt="{{ section.settings.image.alt | escape }}" style="width: 100%; height: 100%; object-fit: cover;">
    {% else %}
      <div class="hero-image-placeholder">
        <span class="ph-label">Campaign Image</span>
        <span class="ph-title">BURDENS</span>
        <span class="ph-label">Replace with model photo</span>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "side_text",
      "label": "Side Text",
      "default": "Collection 01 · 2025"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Collection 01 — BURDENS"
    },
    {
      "type": "text",
      "id": "heading_italic",
      "label": "Heading Italic Line",
      "default": "He knows"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "The Ache."
    },
    {
      "type": "textarea",
      "id": "verse",
      "label": "Verse/Text",
      "default": "John 11:35 — \"Jesus wept.\""
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Primary Button Label",
      "default": "Shop the Collection →"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary Button Label",
      "default": "Our Story ↗"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
