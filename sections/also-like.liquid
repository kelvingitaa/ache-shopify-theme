<!-- YOU MAY ALSO LIKE -->
<div class="also-like">
  <div class="also-like-title">{{ section.settings.heading }}</div>
  <div class="also-like-grid">
    {% if recommendations.performed and recommendations.products_count > 0 %}
      {% for product in recommendations.products limit: 4 %}
        <div class="also-card" onclick="window.location.href='{{ product.url }}'">
          <div class="also-img si-{% cycle '2', '3', '6', '5' %}" style="aspect-ratio:3/4;">
            <div class="also-img-inner" style="width:100%;height:100%;display:flex;align-items:center;justify-content:center;">
              {% if product.featured_image != blank %}
                <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title | escape }}" style="width: 100%; height: 100%; object-fit: cover;">
              {% else %}
                <span style="font-size:.4rem;font-weight:700;letter-spacing:.2em;text-transform:uppercase;color:rgba(255,255,255,.1);">ACHE</span>
              {% endif %}
            </div>
          </div>
          <div class="also-info">
            <div class="also-name">{{ product.title }}</div>
            <div class="also-price">{{ product.price | money }}</div>
          </div>
        </div>
      {% endfor %}
    {% else %}
      {% for i in (1..4) %}
        <div class="also-card">
          <div class="also-img si-{% cycle '2', '3', '6', '5' %}" style="aspect-ratio:3/4;">
            <div class="also-img-inner" style="width:100%;height:100%;display:flex;align-items:center;justify-content:center;">
              <span style="font-size:.4rem;font-weight:700;letter-spacing:.2em;text-transform:uppercase;color:rgba(255,255,255,.1);">ACHE</span>
            </div>
          </div>
          <div class="also-info">
            <div class="also-name">Recommended Piece {{ i }}</div>
            <div class="also-price">$89.00</div>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>

<script>
  // Product recommendations load script could go here via JS fetch if needed
</script>

{% schema %}
{
  "name": "Product Recommendations",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You May Also Like"
    }
  ],
  "presets": [
    {
      "name": "Product Recommendations"
    }
  ]
}
{% endschema %}
